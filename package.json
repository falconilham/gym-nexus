{
  "name": "fitflow",
  "version": "1.0.0",
  "private": true,
  "description": "GymNexus monorepo containing mobile app, admin panel, and backend",
  "workspaces": [
    "client",
    "admin",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:all": "npm run dev --workspace=backend --workspace=admin",
    "dev:all:local": "npm run dev:local --workspace=backend --workspace=admin",
    "dev:all:prod": "npm run dev:prod --workspace=backend --workspace=admin",
    "dev:local": "npm run dev:local --workspaces --if-present",
    "dev:prod": "npm run dev:prod --workspaces --if-present",
    "dev:client": "npm run dev --workspace=client",
    "dev:client:local": "npm run dev:local --workspace=client",
    "dev:client:prod": "npm run dev:prod --workspace=client",
    "dev:admin": "npm run dev --workspace=admin",
    "dev:admin:local": "npm run dev:local --workspace=admin",
    "dev:admin:prod": "npm run dev:prod --workspace=admin",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:backend:local": "npm run dev:local --workspace=backend",
    "dev:backend:prod": "npm run dev:prod --workspace=backend",
    "build": "npm run build --workspaces --if-present",
    "build:client": "npm run build --workspace=client",
    "build:admin": "npm run build --workspace=admin",
    "build:admin:prod": "npm run build:prod --workspace=admin",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "install:all": "npm install",
    "install:backend": "cd backend && yarn install",
    "install:admin": "cd admin && yarn install",
    "install:client": "cd client && yarn install",
    "install:packages": "yarn install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "prettier": "^3.2.4"
  }
}
