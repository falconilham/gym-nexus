{
  "name": "gym-nexus-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "GymNexus monorepo containing mobile app, admin panel, and backend",
  "workspaces": [
    "client",
    "admin",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:client": "npm run start --workspace=client",
    "dev:admin": "npm run dev --workspace=admin",
    "dev:backend": "npm run start --workspace=backend",
    "build": "npm run build --workspaces --if-present",
    "build:client": "npm run build --workspace=client",
    "build:admin": "npm run build --workspace=admin",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "install:all": "npm install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "prettier": "^3.2.4"
  }
}
